# Normalize line endings
* text=auto

# Shell scripts (if any) use LF
*.sh  text eol=lf

# Windows scripts use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Treat big geospatial binaries as binary to avoid diffs
*.tif  binary
*.tiff binary
*.jp2  binary
*.las  binary
*.laz  binary
*.ecw  binary
*.gpkg binary
